<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/botscrew_test?serverTimezone=UTC</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.show_sql">false</property>
        <property name="hibernate.format_sql">false</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="hibernate.dialect.storage_engine">innodb</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL57Dialect</property>

        <mapping class="entity.Degree"></mapping>
        <mapping class="entity.Department"></mapping>
        <mapping class="entity.Lector"></mapping>
    </session-factory>
</hibernate-configuration>